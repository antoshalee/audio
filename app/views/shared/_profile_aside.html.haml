%aside
  .avatar
    - if current_user.avatar.present?
      %img{:alt => "", :src => current_user.avatar.middle.url}/
    - else
      = image_tag image_path('avatar_default_middle.png')
  %h2
    = current_user.login
    - if current_user.speaker?
      %span диктор
  %ul
    %li{class: (params[:controller] == 'orders' && :current)}
      %a{:href => "/orders/client"}<
        %i.fa.fa-headphones
        %span> Заказы
        %span.val 12
    %li
      %a{:href => ""}<
        %i.fa.fa-money
        %span> Финансы
    %li
      %a{:href => ""}<
        %i.fa.fa-star
        %span> Избранное
    %li{class: (params[:controller] == 'settings' && :current)}
      %a{:href => "/settings"}<
        %i.fa.fa-power-icon-cog
        %span> Настройки
